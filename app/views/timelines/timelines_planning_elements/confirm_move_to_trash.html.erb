<%= timelines_header_tags %>
<%= render :partial => 'breadcrumb', :locals => {:planning_element => @planning_element} %>

<%= form_for @planning_element,
  :url => move_to_trash_timelines_project_planning_element_path(@planning_element.project,
                                                                @planning_element), :html => {:method => 'delete'} do |f| %>
  <div class='flash warning'>
    <%= l('timelines.really_move_planning_element_to_trash') %>
  </div>

  <%= submit_tag l("timelines.button_move_to_trash") %>
  <%= link_to l(:button_cancel), timelines_project_planning_elements_path(@project) %>
<% end %>

<hr/>

<%= render :partial => 'planning_element', :object => @planning_element %>
