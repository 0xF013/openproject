<%= timelines_header_tags %>

<%= form_for :timeline,
            :url  => timelines_project_timeline_path(@project, @timeline),
            :html => {:method => 'delete'} do |f| %>

  <div class='flash warning'>
    <%= l('timelines.really_delete_timeline') %>
  </div>

  <h2>
    <%=h @timeline.name %>
  </h2>

  <fieldset class="tabular">
    <legend><%= l('timelines.properties') %></legend>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name, :disabled => true %>
    </p>
  </fieldset>

  <%= submit_tag l(:button_delete) %>
  <%= link_to l(:button_cancel), timelines_project_timeline_path(@project, @timeline) %>

<% end %>
