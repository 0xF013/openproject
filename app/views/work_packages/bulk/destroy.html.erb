<h2><%= l(:label_confirmation) %></h2>

<%= error_messages_for work_packages.first %>

<%= form_tag work_packages_bulk_path, :method => :delete do %>
  <% work_packages.each do |work_package| %>
    <%= hidden_field_tag 'ids[]', work_package.id %>
  <% end %>

  <div class="box">

    <p><strong><%= l(:text_destroy_time_entries_question, :hours => number_with_precision(time_entries.sum(:hours), :precision => 2)) %></strong></p>

    <p>
      <%= fields_for :to_do do |f| %>

        <%= f.radio_button 'action', 'destroy' %>
        <%= f.label 'action_destroy', l(:text_destroy_time_entries) %>

        <br>

        <%= f.radio_button 'action' , 'nullify' %>
        <%= f.label 'action_nullify', l(:text_assign_time_entries_to_project) %>

        <br>

        <%= f.radio_button 'action', 'reassign', :onchange => 'if (this.checked) { $("reassign_to_id").focus(); }' %>
        <%= f.label 'action_reassign', l(:text_reassign_time_entries) %>

        <%= f.text_field 'reassign_to_id', :value => params[:reassign_to_id], :size => 6, :onfocus => '$("todo_reassign").checked=true;' %>

      <% end %>
    </p>
  </div>

  <%= submit_tag l(:button_apply) %>

<% end %>
