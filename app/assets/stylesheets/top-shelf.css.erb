.top-shelf {
  background: #FFC38C url(<%= asset_path 'webalys/warning.png' %>) 22px 18px no-repeat;
  border-bottom: 1px solid black;
  font-size: 12px;
  font-weight: normal;
  padding-bottom: 12px;
  padding-left: 55px;
  padding-right: 18px;
  padding-top: 18px;
}

.top-shelf h1 {
  font-size: 12px;
  font-weight: bold;
}

.top-shelf p {
  width: 800px;
}

.top-shelf h2 {
  border-bottom: 0;
  font-size: 12px;
  font-weight: bold;
  margin: 0;
  text-align: left;
}
